{
    "General": {
        "FormatVersion": 1,
        "OutputFormat": "JSON",
        "BenchmarkName": "GEMM",
        "BenchmarksPath": "src/benchmarks"
    },
    "SearchSettings": {
        "TunerName": "Optuna",
        "Trials": 10
    },
    "ConfigurationSpace": {
        "TuningParameters": [
            {
                "Name": "MWG",
                "Type": "int",
                "Values": "[16, 32, 64, 128]",
                "Default": 16 
            },
            {
                "Name": "NWG",
                "Type": "int",
                "Values": "[16, 32, 64, 128]",
                "Default": 16 
            },
            {
                "Name": "KWG",
                "Type": "int",
                "Values": "[16, 32]",
                "Default": 32 
            },
            {
                "Name": "MDIMC",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "NDIMC",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "MDIMA",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "NDIMB",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "KWI",
                "Type": "int",
                "Values": "[2, 8]",
                "Default": 2 
            },
            {
                "Name": "VWM",
                "Type": "int",
                "Values": "[1]",
                "Default": 1 
            },
            {
                "Name": "VWN",
                "Type": "int",
                "Values": "[1]",
                "Default": 1 
            },
            {
                "Name": "STRM",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 0 
            },
            {
                "Name": "STRN",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 0 
            },
            {
                "Name": "SA",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 0 
            },
            {
                "Name": "SB",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 0 
            },
            {
                "Name": "PRECISION",
                "Type": "int",
                "Values": "[32]",
                "Default": 32 
            }
        ],
		"Conditions": [
            {
                "Expression": "not (KWG % KWI)",
                "Parameters": ["KWG", "KWI"]
            },
            {
                "Expression": "not (MWG % (MDIMC * VWM))",
                "Parameters": ["MWG", "MDIMC", "VWM"]
            },
            {
                "Expression": "not (NWG % (NDIMC * VWN))",
                "Parameters": ["NWG", "NDIMC", "VWN"]
            },
            {
                "Expression": "not (MWG % (MDIMA * VWM))",
                "Parameters": ["MWG", "MDIMA", "VWM"]
            },
            {
                "Expression": "not (NWG % (NDIMB * VWN))",
                "Parameters": ["NWG", "NDIMB", "VWN"]
            },
            {
                "Expression": "not (KWG % ((MDIMC * NDIMC) // MDIMA))",
                "Parameters": ["KWG", "MDIMC", "NDIMC", "MDIMA"]
            },
            {
                "Expression": "not (KWG % ((MDIMC * NDIMC) // NDIMB))",
                "Parameters": ["KWG", "MDIMC", "NDIMC", "NDIMB"]
            }
        ]
    },
    "BenchmarkConfig": {
      "dataSize": 4096,
      "iterations": 1000
    },
    "KernelSpecification": {
        "Language": "CUDA",
        "CompilerOptions": ["-std=c++11"],
        "BenchmarkPath": "src/benchmarks",
        "BenchmarkName": "GEMM",
        "KernelName": "gemm_fast",
        "KernelFile": "gemm.cu",
        "LocalSize": {
            "X": "MDIMC * MWG",
            "Y": "NDIMC * NWG",
            "Z": "1"
        },
        "GlobalSize": {
            "X": "((2048 + MDIMC -1 )// MDIMC + MWG - 1) // MWG",
            "Y": "((2048 + NDIMC -1 )// NDIMC + NWG - 1) // NWG",
            "Z": "1"
        },
        "SharedMemory": 0,
        "Stream": null,
        "Arguments": [
        {
            "Name": "kSizeM",
            "Type": "int32",
            "MemoryType": "Scalar",
            "AccessType": "ReadOnly",
            "FillValue": 2048 
        },
        {
            "Name": "kSizeN",
            "Type": "int32",
            "MemoryType": "Scalar",
            "AccessType": "ReadOnly",
            "FillValue": 2048 
        },
        {
            "Name": "kSizeK",
            "Type": "int32",
            "MemoryType": "Scalar",
            "AccessType": "ReadOnly",
            "FillValue": 2048 
        },
        {
            "Name": "kSizeK",
            "Type": "int32",
            "MemoryType": "Scalar",
            "AccessType": "ReadOnly",
            "FillValue": 2048 
        },
        {
            "Name": "agm",
            "Type": "float",
            "MemoryType": "Vector",
            "AccessType": "ReadOnly",
            "Size": 2048,
            "FillType": "Random",
            "FillValue": 1.0
        },
        {
            "Name": "bgm",
            "Type": "float",
            "MemoryType": "Vector",
            "AccessType": "ReadOnly",
            "Size": 2048,
            "FillType": "Random",
            "FillValue": 1.0
        },
        {
            "Name": "cgm",
            "Type": "float",
            "MemoryType": "Vector",
            "AccessType": "ReadOnly",
            "Size": 2048,
            "FillType": "Constant",
            "FillValue": 0.0
        }
      ]
    }
}
  
