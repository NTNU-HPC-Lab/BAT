{
    "General": {
        "LoggingLevel": "Debug",
        "TimeUnit": "Microseconds",
        "OutputFile": "TuningOutput",
        "OutputFormat": "JSON",
        "BenchmarkName": "GEMM"
    },
    "SearchSettings": {
        "TunerName": "optuna",
        "Trials": 10
    },
    "Budget": {
        "Type": "ConfigurationCount",
        "BudgetValue": 10
    },
    "BenchmarkConfig": {
      "dataSize": 16384,
      "iterations": 10
    },
    "ConfigurationSpace": {
        "TuningParameters": [
            {
                "Name": "MWG",
                "Type": "int",
                "Values": "[16, 32, 64, 128]",
                "Default": 16 
            },
            {
                "Name": "NWG",
                "Type": "int",
                "Values": "[16, 32, 64, 128]",
                "Default": 16 
            },
            {
                "Name": "KWG",
                "Type": "int",
                "Values": "[16, 32]",
                "Default": 32 
            },
            {
                "Name": "MDIMC",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "NDIMC",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "MDIMA",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "NDIMB",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "KWI",
                "Type": "int",
                "Values": "[2, 8]",
                "Default": 2 
            },
            {
                "Name": "VWM",
                "Type": "int",
                "Values": "[1]",
                "Default": 1 
            },
            {
                "Name": "VWN",
                "Type": "int",
                "Values": "[1]",
                "Default": 1 
            },
            {
                "Name": "STRM",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 0 
            },
            {
                "Name": "STRN",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 0 
            },
            {
                "Name": "SA",
                "Type": "int",
                "Values": "[0]",
                "Default": 0 
            },
            {
                "Name": "SB",
                "Type": "int",
                "Values": "[0]",
                "Default": 0 
            },
            {
                "Name": "PRECISION",
                "Type": "int",
                "Values": "[32]",
                "Default": 32 
            }
        ],
		"Conditions": [
            {
                "Expression": "(KWG % KWI) == 0",
                "Parameters": ["KWG", "KWI"]
            },
            {
                "Expression": "(MWG % (MDIMC * VWM)) == 0",
                "Parameters": ["MWG", "MDIMC", "VWM"]
            },
            {
                "Expression": "(NWG % (NDIMC * VWN)) == 0",
                "Parameters": ["NWG", "NDIMC", "VWN"]
            },
            {
                "Expression": "(MWG % (MDIMA * VWM)) == 0",
                "Parameters": ["MWG", "MDIMA", "VWM"]
            },
            {
                "Expression": "(NWG % (NDIMB * VWN)) == 0",
                "Parameters": ["NWG", "NDIMB", "VWN"]
            },
            {
                "Expression": "(KWG % ((MDIMC * NDIMC) // MDIMA)) == 0",
                "Parameters": ["KWG", "MDIMC", "NDIMC", "MDIMA"]
            },
            {
                "Expression": "(KWG % ((MDIMC * NDIMC) // NDIMB)) == 0",
                "Parameters": ["KWG", "MDIMC", "NDIMC", "NDIMB"]
            }
        ]
    },
    "KernelSpecification": {
        "Language": "CUDA",
        "CompilerOptions": ["-std=c++11"],
        "BenchmarkPath": "src/benchmarks",
        "BenchmarkName": "GEMM",
        "KernelName": "gemm_fast",
        "KernelFile": "gemm.cu",
        "LocalSize": {
            "X": "MDIMC",
            "Y": "NDIMC",
            "Z": "1"
        },
        "GlobalSize": {
            "X": "(16384 * MDIMC) // MWG",
            "Y": "(16384 * NDIMC) // NWG",
            "Z": "1"
        },
        "SharedMemory": 16384,
        "Stream": null,
        "Arguments": [
        {
            "Name": "kSizeM",
            "Type": "int32",
            "MemoryType": "Scalar",
            "AccessType": "ReadOnly",
            "FillValue": 16384 
        },
        {
            "Name": "kSizeN",
            "Type": "int32",
            "MemoryType": "Scalar",
            "AccessType": "ReadOnly",
            "FillValue": 16384 
        },
        {
            "Name": "kSizeK",
            "Type": "int32",
            "MemoryType": "Scalar",
            "AccessType": "ReadOnly",
            "FillValue": 16384 
        },
        {
            "Name": "agm",
            "Type": "float",
            "MemoryType": "Vector",
            "AccessType": "ReadOnly",
            "Size": 16384,
            "FillType": "Random",
            "FillValue": 1.0
        },
        {
            "Name": "bgm",
            "Type": "float",
            "MemoryType": "Vector",
            "AccessType": "ReadOnly",
            "Size": 16384,
            "FillType": "Random",
            "FillValue": 1.0
        },
        {
            "Name": "cgm",
            "Type": "float",
            "MemoryType": "Vector",
            "AccessType": "ReadOnly",
            "Size": 16384,
            "FillType": "Constant",
            "FillValue": 0.0
        }
      ]
    }
}
  
