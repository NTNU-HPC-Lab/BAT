{
    "General": {
        "BenchmarkName": "GEMM",
        "OutputFormat": "JSON",
        "Objective": "GFLOPs",
        "Minimize": false
    },
    "ConfigurationSpace": {
        "TuningParameters": [
            {
                "Name": "MWG",
                "Type": "int",
                "Values": "[16, 32, 64, 128]",
                "Default": 16 
            },
            {
                "Name": "NWG",
                "Type": "int",
                "Values": "[16, 32, 64, 128]",
                "Default": 16 
            },
            {
                "Name": "KWG",
                "Type": "int",
                "Values": "[16, 32]",
                "Default": 32 
            },
            {
                "Name": "MDIMC",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "NDIMC",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "MDIMA",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "NDIMB",
                "Type": "int",
                "Values": "[8, 16, 32]",
                "Default": 16 
            },
            {
                "Name": "KWI",
                "Type": "int",
                "Values": "[2, 8]",
                "Default": 2 
            },
            {
                "Name": "VWM",
                "Type": "int",
                "Values": "[1]",
                "Default": 1 
            },
            {
                "Name": "VWN",
                "Type": "int",
                "Values": "[1]",
                "Default": 1 
            },
            {
                "Name": "STRM",
                "Type": "int",
                "Values": "[0]",
                "Default": 0 
            },
            {
                "Name": "STRN",
                "Type": "int",
                "Values": "[0]",
                "Default": 0 
            },
            {
                "Name": "SA",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 0 
            },
            {
                "Name": "SB",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 0 
            },
            {
                "Name": "PRECISION",
                "Type": "int",
                "Values": "[32]",
                "Default": 32 
            }
        ],
		"Conditions": [
            {
                "Expression": "(KWG % KWI) == 0",
                "Parameters": ["KWG", "KWI"]
            },
            {
                "Expression": "(MWG % MDIMC) == 0",
                "Parameters": ["MWG", "MDIMC"]
            },
            {
                "Expression": "(NWG % NDIMC) == 0",
                "Parameters": ["NWG", "NDIMC"]
            },
            {
                "Expression": "(MWG % MDIMA) == 0",
                "Parameters": ["MWG", "MDIMA"]
            },
            {
                "Expression": "(NWG % NDIMB) == 0",
                "Parameters": ["NWG", "NDIMB"]
            },
            {
                "Expression": "(KWG % ((MDIMC * NDIMC) // MDIMA)) == 0",
                "Parameters": ["KWG", "MDIMC", "NDIMC", "MDIMA"]
            },
            {
                "Expression": "(KWG % ((MDIMC * NDIMC) // NDIMB)) == 0",
                "Parameters": ["KWG", "MDIMC", "NDIMC", "NDIMB"]
            }
        ]
    },
    "Budget": 
        {
            "BudgetValue": 200,
            "Type": "ConfigurationCount"
        },
    "KernelSpecification": {
        "Language": "HIP",
        "CompilerOptions": ["-std=c++11"],
        "BenchmarkName": "GEMM",
        "KernelName": "gemm_fast",
        "KernelFile": "gemm.hip",
        "GlobalSizeType": "CUDA",
        "LocalSize": {
            "X": "MDIMC",
            "Y": "NDIMC",
            "Z": "1"
        },
        "GlobalSize": {
            "X": "4096 // MWG",
            "Y": "4096 // NWG",
