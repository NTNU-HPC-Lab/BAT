{
    "General": {
        "FormatVersion": "0.0.1",
        "BenchmarkName": "pnpoly"
    },
    "ConfigurationSpace": {
        "TuningParameters": [
            {
                "Name": "block_size_x",
                "Type": "int",
                "Values": "list(range(32, 1000+1, 32))",
                "Default": 256
            },
            {
                "Name": "tile_size",
                "Type": "int",
                "Values": "[1] + [2*i for i in range(1,11)]",
                "Default": 1
            },
            {
                "Name": "between_method",
                "Type": "int",
                "Values": "[0, 1, 2, 3]",
                "Default": 1
            },
            {
                "Name": "use_method",
                "Type": "int",
                "Values": "[0, 1, 2]",
                "Default": 1
            }
        ],
		"Conditions": [


        ]
    },
    "BenchmarkConfig": {
      "dataSize": 4096,
      "iterations": 10,
      "MAX_THREADS": 512,
      "MAX_SHARED_MEMORY_BLOCK": 256,
      "MAX_SHARED_MEMORY": 1024
    },
    "KernelSpecification": {
        "Language": "CUDA",
        "CompilerOptions": ["-std=c++11"],
        "BenchmarkName": "pnpoly",
        "KernelName": "cn_pnpoly",
        "KernelFile": "pnpoly.cu",
        "GlobalSizeType": "OpenCL",
        "LocalSize": {
            "X": "block_size_x",
            "Y": "1",
            "Z": "1"
        },
        "GlobalSize": {
            "X": "(20000000 // block_size_x)+1",
            "Y": "1",
            "Z": "1"
        },
        "ProblemSize": 20000000,
        "GridDivX": ["block_size_x", "tile_size"],
        "GridDivY": [],
        "SharedMemory": 0,
        "Stream": null,
        "Arguments": [
        {
            "Name": "bitmap",
            "Type": "int32",
            "Size": 20000000,
            "MemoryType": "Vector",
            "AccessType": "ReadOnly",
            "FillType": "Constant",
            "FillValue": 0.0
        },
        {
            "Name": "points",
            "Type": "float",
            "Size": 40000000,
            "MemoryType": "Vector",
            "AccessType": "ReadOnly",
            "FillType": "Random",
            "FillValue": 1.0
        },
        {
          "Name": "vertex_xy",
          "Type": "float",
          "Size": 1200,
          "MemoryType": "Vector",
          "AccessType": "ReadWrite",
          "FillType": "Random",
          "FillValue": 1.0
        },
        {
          "Name": "size",
          "Type": "int32",
          "MemoryType": "Scalar",
          "AccessType": "ReadOnly",
          "FillValue": 20000000
        }
      ]
    },
    "verification": {
        "type": "reference_CPU",
        "path": "/path/reference.cpp"
    }
}
  
